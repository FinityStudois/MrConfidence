var facing:String;facing = "RIGHT";var player:hero = new hero();stage.addChild(player);player.x=200;player.y=200;stage.addEventListener (KeyboardEvent.KEY_DOWN, keyDownHandler); function keyDownHandler (e:KeyboardEvent):void {	trace (e.keyCode);	if(e.keyCode == 65 || e.keyCode == 37){		player.x -= 5;		facing = "LEFT";	}	else if (e.keyCode == 68 || e.keyCode == 39){		player.x += 5;		facing = "RIGHT";	}	else if (e.keyCode == 32)		fireBullet(player.x, player.y, facing);} function fireBullet(startX:int, startY:int, facing:String){	var bullet:Bullet = new Bullet();	stage.addChild(bullet);	bullet.x = startX;	bullet.y = startY;	if(facing == "LEFT"){		while (bullet.x >= 0){			wait(10);					bullet.x -= 1;		}	}	else if (facing == "RIGHT"){		while (bullet.x <= 400){			wait(10);					bullet.x += 1;		}	}}