package cisc60.game.map {		import flash.display.MovieClip;	import cisc60.game.character.Hero;	import flash.display.Stage;	import flash.events.Event;		public class DesertMap extends MovieClip {				public var hero:Hero;		public var mrc_stage:Stage;		public var map_speed;				public function DesertMap(mrc_stage:Stage ,hero:Hero) {			this.x = 1;			this.mrc_stage = mrc_stage;			this.hero = hero;			this.map_speed = 0;						this.mrc_stage.addEventListener(Event.ENTER_FRAME, update_map_position);		}				private function update_map_position(e:Event):void {			//trace("map position: " + this.x);			this.map_speed *= 0.85;			if(this.hero.keyboard_controls.key_right)				this.x -= this.map_speed;			if(this.hero.keyboard_controls.key_left)				this.x += this.map_speed;			this.map_speed++;		}	}}