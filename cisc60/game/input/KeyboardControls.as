{ trace("Arrow-Left Down"); }			//Key Up			if(e.keyCode == Keyboard.UP)    { trace("Arrow-Up Down"); }			//Key Right			if(e.keyCode == Keyboard.RIGHT) {  trace("Arrow-Right Down"); }			//Key Down			if(e.keyCode == Keyboard.DOWN)  {  trace("Arrow-Down Down"); }			//Space Key			if(e.keyCode == Keyboard.SPACE) {  trace("Space-Key Down");  }		}				//Check which keys are Up		private function print_key_up(e:KeyboardEvent) {			//Key Left			if(e.keyCode == 37) { trace("Arrow-Left Up"); }			//Key Up			if(e.keyCode == 37) {  trace("Arrow-Up Up"); }			//Key Right			if(e.keyCode == 39) {  trace("Arrow-Right Up");  }			//Key Down			if(e.keyCode == 40) {  trace("Arrow-Down Up");  }			//Space Key			if(e.keyCode == 13) {  trace("Space-Key Up"); }		}	}}